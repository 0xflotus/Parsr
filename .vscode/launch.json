{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/dist/bin/index.js",
      "outFiles": ["${workspaceRoot}/dist/bin/**/*.js"],
      "sourceMaps": true,
      "args": [
        "-f",
        "${workspaceRoot}/pipeline/samples/foo.xml",
        "-o",
        "${workspaceRoot}/pipeline/samples/output",
        "-n",
        "example",
        "-c",
        "${workspaceRoot}/server/defaultConfig.json",
        "-l",
        "debug",
        "-p"
      ],
      "env": {
        "NODE_DEBUG": "pipeline",
        "GOOGLE_APPLICATION_CREDENTIALS": "${workspaceRoot}/***.json"
      },
      "outputCapture": "std"
    }
  ]
}
